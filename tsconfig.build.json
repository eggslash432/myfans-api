{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",       // ソースのルート
    "outDir": "dist",       // 出力先
    "removeComments": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["src/**/*"],  // ← これがないと何もビルドされない
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*.spec.ts"
  ]
}

